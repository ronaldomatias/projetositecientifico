<%@ Master Language="C#" AutoEventWireup="true" CodeBehind="PaginaMaster.master.cs" Inherits="sitecientifico.FrontEnd.PaginaMaster" %>

<!DOCTYPE html>
<html>

<head runat="server">
    <title></title>
    <link rel="stylesheet" href="/FrontEnd/CSS/FolhaEstiloMasterPage.css" />
    <script src="../../Scripts/jquery-3.6.0.min.js"></script>

    <asp:ContentPlaceHolder ID="plhScript" runat="server"></asp:ContentPlaceHolder>
</head>
<body>
    <form id="form1" method="post" runat="server">
        <div class="cabecalho">
            <div class="botoesMenu" runat="server">
                <asp:Button class="botaoCabecalho" Text="Novo artigo" PostBackUrl="~/FrontEnd/Site/CriarArtigo.aspx" runat="server" />
                <asp:Button class="botaoCabecalho" Text="Astronomia" runat="server" />
                <asp:Button class="botaoCabecalho" Text="Ler Artigos" PostBackUrl="~/FrontEnd/Site/VisualizarArtigos.aspx" runat="server" />
            </div>
        </div>

        <asp:PlaceHolder ID="plhLinhaDoTempo" runat="server">
            <asp:Label ID="lblLinhaDoTempo" ToolTip="Página onde você está navegando" CssClass="lblLinhaDoTempo" runat="server"></asp:Label>
        </asp:PlaceHolder>

        <asp:ScriptManager ID="scpManager" runat="server"></asp:ScriptManager>
        <asp:UpdatePanel ID="pnlInformacaoRetorno"  UpdateMode="Always" class="pnlInformacaoRetorno" runat="server">
            <ContentTemplate>
                <asp:ValidationSummary ID="sumarioArtigos" class="sumarioArtigos" runat="server" />
                <asp:Button ID="btnFecharInformacao"  CssClass="btnFecharInformacao" Text="X" OnClick="FecharInfos" runat="server"></asp:Button>
            </ContentTemplate>
            <Triggers>
                <asp:AsyncPostBackTrigger ControlID="btnFecharInformacao" />
            </Triggers>
        </asp:UpdatePanel>

        <div class="centro" runat="server">
            <asp:ContentPlaceHolder ID="plhConteudo" runat="server"></asp:ContentPlaceHolder>
        </div>
    </form>
</body>

</html>

